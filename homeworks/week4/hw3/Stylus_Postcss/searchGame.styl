blueA = #2196F3

.searchBox 
  margin: 30px auto
  text-align: center

  &__ele 
    /* height: 50px */
    font-size: 28px


.container 
  display: inline-flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: center
  margin: 20px auto

  &__box 
    position: relative
    border: 1px black solid
    width: 272px
    height: 380px
    margin: 10px
    display: flex
    flex-direction: column
    transition: transform .2s


.submit 
    font-size: 16px
    background: blueA
    padding: 6px
    position: absolute
    right: 10px
    bottom: 10px
    color: white

    &:hover 
      cursor: pointer
      transform: scale(1.1)
