mixin allSubComments(mainAuthor, subs)

  each sub in subs
    .row.justify-content-center
      if (sub.user_id === mainAuthor.id)
        .card.border-danger.col-8.m-1
          .card-body
            h4.card-title.text-center Author: #{mainAuthor.nickname} 
            p.card-text reply at: #{sub.createdAt}
            p.card-text #{sub.content}

      else
        .card.border-warning.col-10.m-1
          .card-body
            h4.card-title  #{sub.user_id} 
            p.card-text reply at: #{sub.createdAt}
            h5.card-title #{sub.userId}
            p.card-text #{sub.content}